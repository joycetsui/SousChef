<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.workingtitle.makeit.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/lime"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:textAlignment="center"
        android:titleTextAppearance="@style/RegularTextStyle"/>

    <TextView
        style="@style/searchOptionsTV"
        android:id="@+id/tvCookTime"
        android:layout_height="wrap_content"
        android:text="@string/cookTime"
        android:layout_width="fill_parent"
        android:layout_below="@+id/toolbar"
        android:onClick="onClick"
        android:clickable="true">
    </TextView>

    <TextView
        style="@style/searchOptionsTV"
        android:id="@+id/tvPortions"
        android:layout_height="wrap_content"
        android:text="@string/portions"
        android:layout_width="fill_parent"
        android:layout_below="@+id/tvCookTime"
        android:onClick="onClick"
        android:clickable="true">

    </TextView>



</RelativeLayout>
